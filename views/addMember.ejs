<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>add Group</title>
</head>
<body>
    <h4>Add Member</h4>
    <form action="/group/member" method="POST">
        <label for="idgroup">ID Group</label>
        <input type="text" name="idgroup" value= "<%= id %>" disabled>
        <label for="member"> Member </label>
        <select name="member">
            <% data.forEach(element => { %>
                <option value="<%= element.id %>"> <%= element.username %></option>
            <% }); %>
        </select>
        <input type="submit" value="save">
    </form>

    <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: #dddddd;
        }
     </style>
    
    <h3>Member</h3>
    <table>
        <th>Name</th>
        <th>Email</th>
        <% group[0].Users.forEach(el => { %>
            <tr>
                <td> <%= el.username %> </td>
                <td><%= el.email %></td>
            </tr>
      <%  }) %> 
    </table> <br>

    <h4>Make Appointment</h4>
    <form action="/group/member/invite" method="POST">
        <label for="groupId">ID Group</label>
        <input type="text" name="groupId" value= <%= id %> > <br><br>

        <label for="title">Topic : </label>
        <input type="text" name="title"><br>
        <label for="date">date : </label>
        <input type="date" data-date-inline-picker="true" name="date"><br>
        <label for="time">Time : </label>
        <input type="time" name="time" value="23.00"><br><br>
        <input type="submit" value = "send to all member">
    </form>

</body>
</html>